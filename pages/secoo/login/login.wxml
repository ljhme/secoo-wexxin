<view class="myContainer">
	<view class="close">
		<image src="/images/close.png" bindtap = "close"></image>
	</view>
	<view class="phone">
	  	<input class="phoneTxt" placeholder="用户名/邮箱/手机号" placeholder-style ="color:red; font-size:10px; color:#EBEBEB"/>
	</view>
	<view class="password">
	  	<input class="passwordTxt" placeholder="密码" placeholder-style ="color:red; font-size:10px; color:#EBEBEB"/>
	</view>
	<view class="register">
	  	<button type="default"> 登录 </button>
	</view>
	<view class="gotoLogin">
		<view>
		  	<text>没有账号？</text><b bindtap="gotoregister">请注册</b>
		</view>
		<view>
		  	<text>忘记密码?</text><b>找回密码</b>
		</view>
	</view>

	<view class="otherLogin">
	  	<view class="leftLine"></view>
	  	<b>合作账号登录</b>
	  	<view class="rightLine"></view>
	</view>

	<ul class="loginLink">
		<li class="weixin">
			<image src="/images/weixin.png"></image>
			<b>微信登录</b>
		</li>
		<li class="qq">
			<image src="/images/qq.png"></image>
			<b>QQ登录</b>
		</li>
	</ul>

</view>